<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_zone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/realestate_topzone_height"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#000000"
            android:padding="@dimen/realestate_title_margin"
            android:alpha="0.8"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/realestate_topzone_title_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realestate_price_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/top_zone"
        android:layout_above="@+id/bottom_zone"
        android:layout_margin="@dimen/search_price_margin"
        android:padding="@dimen/search_price_padding" >
        <ScrollView
            android:id="@+id/realestate_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/realestate_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/realestate_btn_margin"
                    android:layout_marginRight="@dimen/realestate_btn_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realestate_date_prefix"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                    <Spinner
                        android:id="@+id/date_range_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"></Spinner>
                    <TextView
                        android:id="@+id/date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/realestate_text_size_s"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/realestate_divider_height"
                    android:background="#999999"
                    android:layout_margin="@dimen/realestate_btn_margin"/>
                <!-- total price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/realestate_btn_margin"
                    android:layout_marginRight="@dimen/realestate_btn_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realestate_total_price_prefix"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/realestate_divider_height"
                    android:background="#999999"
                    android:layout_margin="@dimen/realestate_btn_margin"/>
                <!-- unite price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/realestate_btn_margin"
                    android:layout_marginRight="@dimen/realestate_btn_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realestate_unite_price_prefix"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                    <TextView
                        android:id="@+id/unit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/realestate_divider_height"
                    android:background="#999999"
                    android:layout_margin="@dimen/realestate_btn_margin"/>
                <!-- result num -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/realestate_btn_margin"
                    android:layout_marginRight="@dimen/realestate_btn_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realestate_result_num_prefix"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                    <TextView
                        android:id="@+id/result_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realestate_result_num_lastfix"
                        android:textSize="@dimen/realestate_text_size"
                        android:layout_margin="@dimen/realestate_text_margin"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/realestate_divider_height"
                    android:background="#999999"
                    android:layout_margin="@dimen/realestate_btn_margin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/realestate_trade_graph_btn"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="@dimen/realestate_btn_height"
                        android:layout_centerHorizontal="true"
                        android:text="@string/realestate_trade_graph_btn"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/realestate_btn_text_size"
                        android:layout_margin="@dimen/realestate_btn_margin"
                        android:background="@drawable/button_custom"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/realestate_trade_detail_btn"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="@dimen/realestate_btn_height"
                        android:layout_centerHorizontal="true"
                        android:text="@string/realestate_trade_detail_btn"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/realestate_btn_text_size"
                        android:layout_margin="@dimen/realestate_btn_margin"
                        android:background="@drawable/button_custom"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/search_price_margin"
        android:paddingLeft="@dimen/search_price_padding"
        android:paddingRight="@dimen/search_price_padding"
        android:orientation="horizontal">
        <Button
            android:id="@+id/realestate_cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/realestate_btn_height"
            android:layout_centerHorizontal="true"
            android:text="@string/realestate_trade_carprice_btn"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/realestate_btn_text_size"
            android:layout_margin="@dimen/realestate_btn_margin"
            android:background="@drawable/button_custom_white"
            android:textStyle="bold" />
        <Button
            android:id="@+id/realestate_search_btn"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="@dimen/realestate_btn_height"
            android:layout_centerHorizontal="true"
            android:text="@string/realestate_trade_search_btn"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/realestate_btn_text_size"
            android:layout_margin="@dimen/realestate_btn_margin"
            android:background="@drawable/button_custom"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
