<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_background"
        android:scaleType="centerCrop"
        />
	<TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_zone"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/login_margin"
        android:text="@string/login_text"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/login_title_up" />
	
    <RelativeLayout
        android:id="@+id/login_zone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_zone_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/login_margin"
        android:padding="@dimen/login_column_padding" >

        <RelativeLayout
            android:id="@+id/login_username_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/login_column_margin_top" >

            <TextView
                android:id="@+id/login_username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/login_column_margin_right"
                android:text="@string/login_username"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/login_column_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edittext_height"
                android:layout_toRightOf="@+id/login_username_txt"
                android:fontFamily="sans-serif-light"
                android:hint="@string/login_username_hint"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:paddingLeft="@dimen/login_edittext_padding"
                android:background="#FFFFFF"
                android:singleLine="true"
                android:alpha="0.5"
                android:text="test@gmail.com" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_password_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_username_column"
            android:layout_margin="@dimen/login_column_margin_top" >

            <TextView
                android:id="@+id/login_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/login_column_margin_right"
                android:text="@string/login_password"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/login_column_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edittext_height"
                android:layout_toRightOf="@+id/login_password_txt"
                android:fontFamily="sans-serif-light"
                android:hint="@string/login_password_hint"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/login_edittext_padding"
                android:background="#FFFFFF"
                android:singleLine="true"
                android:alpha="0.5"
                android:text="000000" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_below="@+id/login_password_column"
            android:layout_centerHorizontal="true"
            android:text="@string/login_btn"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/login_btn_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    

</RelativeLayout>
